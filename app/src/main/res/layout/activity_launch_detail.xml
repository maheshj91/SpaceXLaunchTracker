<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/_4sdp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/_4sdp"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp">

        <include
            android:id="@+id/mission_detail"
            layout="@layout/layout_mission_details" />

        <include
            android:id="@+id/rocket_details"
            layout="@layout/layout_rocket_details" />

        <include
            android:id="@+id/launch_details"
            layout="@layout/layout_launch_details" />

        <include
            android:id="@+id/layout_links"
            layout="@layout/layout_links" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>